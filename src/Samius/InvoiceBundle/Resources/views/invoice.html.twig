<html>
<head>
    <style type="text/css">
        table {
            width: 100%;
            padding: 0;
            margin: 0;
        }

        .heading {
            font-weight: bold;
            font-size: 80%;
        }

        .cisloFaktury {
            text-align: right;
            font-size: 14px;
        }

        .nadpis {
            border-bottom: 1px solid #0000FF;
        }

        .items {
            font-size: 80%;
        }

        .items tr th {
            font-weight: bold;
            border-bottom: 1px solid #eeeeee;
            padding-bottom: 10px;
            height: 30px;
        }

        .total td {
            font-size: 140%;
            height: 50px;
            vertical-align: bottom;
            margin: 30px;
        }

        .sum {
            padding-bottom: 30px;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .separator td {
            border-bottom: 1px solid #eeeeee;
        }

        .separator-item {
            font-size: 5px;
        }

        .separator-invisible {
            font-size: 25px;
        }

        .oznaceni {
            text-align: left;
            width: 210px;
        }

        .mnozstvi {
            width: 50px;
        }

        .percent-dph {
            width: 45px;
        }

        .dph, .zaklad, .celkem, .cena-za-mj {
            width: 85px;
        }

        .ceny {
            font-size: 7px;
        }
    </style>
</head>
<body>
<table>
    <tr class="nadpis">
        <td><h1>{{"invoice.title" |trans}}</h1></td>
        <td class="cisloFaktury">{{ 'invoice.invoice-NUMBER' |trans({'%NUMBER%':invoice.number})}}</td>
    </tr>
    <tr class="separator">
        <td colspan="7">
            &nbsp;
        </td>
    </tr>
    <tr>
        <td>
            <div class="heading">{{'invoice.contractor'|trans}}</div>
            <table>
                <tr>
                    <td>Firma</td>
                </tr>
                <tr>
                    <td>Ulice, Město</td>
                </tr>
                <tr>
                    <td>Česká republika</td>
                </tr>
                <tr>
                    <td>{{'invoice.ic'|trans}}: 123</td>
                </tr>
                <tr>
                    <td>{{'invoice.dic'|trans}}: CZ123</td>
                </tr>
            </table>
        </td>
        <td>
            <div class="heading">{{'invoice.customer' |trans}}</div>
            <table>
                <tr>
                    <td>{{ invoice.invoiceName }}, {{ invoice.invoiceCompany }}</td>
                </tr>
                <tr>
                    <td>{{ invoice.invoiceStreet }}, {{ invoice.invoiceTown }}</td>
                </tr>
                <tr>
                    <td>{{'invoice.ic'|trans}}: {{ invoice.invoiceIc }}</td>
                </tr>
                <tr>
                    <td>{{ 'invoice.dic'|trans}}: {{ invoice.invoiceDic }}</td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>


            <div class="heading">{{'invoice.bank.title'|trans}}</div>
            {{'invoice.bank.bank'|trans}}: FIO<br/>
            {{ 'invoice.bank.account'|trans }}: <span class="account_number">1234567890</span><br/>
            {{'invoice.bank.variable'|trans}}: <span class="variable-symbol">{{ invoice.number }}</span><br/>
            {{'invoice.bank.paymentForm'|trans}}: Převodem
        </td>
        <td>{{'invoice.dateCreated'|trans}}: {{ invoice.dateCreated |date('j. n. Y') }}<br/>{{'invoice.dueDate'|trans}}: <b>{{ invoice.dueDate |date('j. n. Y') }}</b>
            <br><br>
        </td>
    </tr>
    <tr class="separator-invisible">
        <td colspan="7">
            &nbsp;
        </td>
    </tr>
    <tr>
        <td>
            <table class="items">
                <tr>
                    <th class="oznaceni">{{'invoice.items.name'|trans}}</th>
                    <th class="mnozstvi text-center">{{'invoice.items.count'|trans}}</th>
                    <th class="cena-za-mj text-right">{{'invoice.items.unitPrice'|trans}}</th>
                    <th class="percent-dph text-center">{{'invoice.items.vatPercent'|trans}}</th>
                    <th class="zaklad text-right">{{'invoice.items.base'|trans}}</th>
                    <th class="dph text-right">{{'invoice.items.vat'|trans}}</th>
                    <th class="celkem text-right">{{'invoice.items.totalItem'|trans}}</th>
                </tr>
                <tr class="separator-item">
                    <td colspan="7">&nbsp;</td>
                </tr>
                {% for item in invoice.items %}
                    <tr class="separator-item">
                        <td colspan="7">&nbsp;</td>
                    </tr>
                    <tr>
                        <td>
                            {% if item.isRounding %}
                                {{ 'invoice.item.roundTitle' |trans }}
                            {% else %}
                                {{ item.description }}
                            {% endif %}
                        </td>
                        <td class="text-center">{{ item.count }}</td>
                        <td class="text-right">{{ item.unitPriceWithoutVat |invoiceprice }}</td>
                        <td class="text-center">{{ item.vat |invoiceprice}}</td>
                        <td class="text-right">{{ item.getTotalPriceWithoutVat |invoiceprice }}</td>
                        <td class="text-right">{{ item.totalVat |invoiceprice}}</td>
                        <td class="text-right">{{ item.totalPriceWithVat |invoiceprice}}</td>
                    </tr>
                {% endfor %}
                <tr class="separator">
                    <td colspan="7">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td colspan="7">
                        &nbsp;
                    </td>
                </tr>
                <tr class="sum">
                    <td colspan="4">{{'invoice.itemsSum'|trans}}</td>
                    <td class="text-right">{{ invoice.totalPriceWithoutVat |invoiceprice}}</td>
                    <td class="text-right">{{ invoice.totalVat |invoiceprice}}</td>
                    <td class="text-right">{{ invoice.totalPriceWithVat |invoiceprice}}</td>
                </tr>
                <tr>
                    <td colspan="7">
                        &nbsp;
                    </td>
                </tr>
                <tr class="total">
                    <td>{{'invoice.total'|trans|upper}}</td>
                    <td colspan="6" class="text-right">{{ invoice.totalPriceWithVat |invoiceprice}}</td>
                </tr>
            </table>

        </td>
    </tr>
    <tr>
        <td class="ceny">
            <p>{{'invoice.pricesIn-CURRENCY'|trans({'%CURRENCY%':invoice.currency})}}</p>
        </td>
    </tr>
</table>
</body>
</html>